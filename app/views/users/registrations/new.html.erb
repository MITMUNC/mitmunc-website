    <div class="signup_body">
      <div class="title2">
        <h2 class="text_center main-title">Interested in MITMUNC 2017?</h2>
        <h2 class="text_center subtitle">Sign up here!</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:class => "signup_body") do |f| %>
      <div class="signup_body">
          <div class = "inside_signup">
              <div class="field">
                <%= f.label :email, :class => "thin" %><br />
                <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", :class => 'rounded' %>
              </div>

              <div class="field">
                <%= f.label :password, :class => "thin" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> char. min.)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", placeholder: "Enter a secure password",:class => 'rounded' %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, :class => "thin" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter a secure password",:class => 'rounded' %>
              </div>
          </div>

          <div class="actions" id="bootstrap-overrides">
            <button type="button"><%= f.submit "Sign up", :class => 'btn_2 btn_2-primary btn_2-lg round signin' %></button>
            <br>  <br>
            <div class="links"><%= render "users/shared/links" %></div>
          </div>
        <% end %>
      </div>
    </div>
