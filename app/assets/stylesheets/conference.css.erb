.drop-container{
  width: 60%;
  margin: 0 auto;
}

h4{
  font-size: 1.3em;
  font-family: "Montserrat";
  text-transform: uppercase;
  font-weight: normal;
}
h4:hover{
  color:rgba(26,26,26,.7);
}
h4:before {
    content: "";
    border-color: transparent #A31F34;
    border-style: solid;
    border-width: 0.35em 0 0.35em 0.45em;
    display: block;
    height: 0;
    width: 0;
    left: -1em;
    top: 0.8em;
    position: relative;
}
